# get root directory
xmake_sh_rootdir=$(X= cd -- "$(dirname -- "$0")" && pwd -P)

# ######################################################################################
# define some basic functions
#

die() {
    echo "$@" 1>&2 ; exit 1
}

includes()
{
    . "$xmake_sh_rootdir/${1}/xmake.sh"
}


echo "hello"

xmake_sh_test()
{
    echo "test"
}


includes src

xx=`xmake_sh_test2`
echo "xx: $xx"

xmake_sh_test2

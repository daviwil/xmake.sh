# get root directory
xmake_sh_rootdir=$(X= cd -- "$(dirname -- "$0")" && pwd -P)

die() {
    echo "$@" 1>&2 ; exit 1
}

# include the given xmake.sh file or directory
includes()
{
    local path=${1}
    if [ -d "${path}" ]; then
        . "${path}/xmake.sh"
    elif [ -f "${path}" ]; then
        . "${path}"
    else
        . "${xmake_sh_rootdir}/${path}/xmake.sh"
    fi
}

# include xmake.sh file in root directory
_includes_xmake_sh()
{
    local file=${xmake_sh_rootdir}/xmake.sh
    if [ -f "${file}" ]; then
        includes "${file}"
    else
        # include all xmake.sh files in next sub-directories
        local files=`find ${xmake_sh_rootdir} -depth 2 -name "xmake.sh"`
        for file in ${files}; do
            includes "${file}"
        done
    fi
}
_includes_xmake_sh

